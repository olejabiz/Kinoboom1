<Window x:Class="WpfApp1.Lkab"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Lkab" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51"></RowDefinition>
            <RowDefinition Height="150"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="KINOBOOM" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" Background="Black" Grid.Row="0" ></Label>
        <Label Content="Ваш уникальный код:" HorizontalAlignment="Center" VerticalAlignment="Bottom" Grid.Row="1" FontSize="14"></Label>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Row="2" Width="180" Background="LightGray"></TextBlock>
        <Button Content="На главную" x:Name="BtnEntered" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="BtnEntered_Click" Grid.Row="3" Background="Transparent" BorderThickness="0" FontSize="16" Margin="0,0,10,10" ></Button>
    </Grid>
</Window>